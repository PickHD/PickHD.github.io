<h4 style="text-align: center;">{{viewTitle}}</h4>

<h3><a href="/home/posts" class="btn btn-success"><i class="fa fa-plus">Posts Baru</i></a></h3>
 {{#each list}}
<div class="jumbotron">
  <h3 class="display-4">"{{this.title}}"</h3>
  <p class="lead">Author:{{this.author}}</p>
  <p class="lead">Posts: {{this.posts}}</p>
  <p class="lead">
    <a class="btn btn-primary btn-md" href="/home/posts/{{this._id}}" role="button">Lihat</a>
  </p>
  <p class="lead">
    <a class="btn btn-danger btn-md" href="/home/posts/delete/{{this._id}}" role="button">Hapus post</a>
  </p>
  <hr class="my-4">
</div>
 {{/each}}